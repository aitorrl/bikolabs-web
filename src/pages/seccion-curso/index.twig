	<div id="reserva-plaza" class="section bg-white pl-7 ly-form-curso-wrap h-100v " data-scroll-section>

		<div class="d-flex justify-content-center">

			<div class="d-flex flex-column justify-content-start align-items-start h-100v pr-7">
				<div>
					<h2 class="title-4 pt-6 mb-6">Reservar plaza</h2>
				</div>
				<div>
					<p class="title-2 mb-3 line-base">Intervenir en la tecnología que <br>diseña nuestro comportamiento
					</p>
					<p class="color-blue-1 text-xl">29-30 Junio 2021 <span class="color-blue-6"> de 15:00 a 18:30</span>
					</p>
					<div class="pt-5">
						<p class="color-blue-6 mb-0">Tarifa Early</p>
						<p class="color-blue-1 title-2"><span class="line-through">95€</span> 45€</p>
					</div>
				</div>
			</div>

			<div class="d-flex justify-content-center align-items-center h-100v">
				<div>
					<!-- Form -->
					{% include "@base/forms/curso.twig" %}
					<!-- Fin Form -->
				</div>
			</div>
		</div>
	</div>
	<!-- Form curso -->



</div>
{% endblock %}