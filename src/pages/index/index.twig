{% extends "layouts::/page.twig" %}
{% block page %}




<div class="bg-blue-1" data-scroll-container>

    <div class="nav-init" data-scroll-section>
        <img src="/assets/images/logo.svg" alt="">
    </div>

    <div class="section bg-blue-1 p-6 " data-scroll-section>
        <div class="d-flex">
            <div class="d-flex h-100 align-items-center card-1-pos__1">
                <h1 class="title-4 color-white line-3xl pt-5">Investigamos y modelamos<br>
                    la potencia e implicaciones<br>
                    de la interacción presente y futura<br>
                    entre personas y tecnología.</h1>
            </div>
            <div class="card-1-pos__2" data-scroll data-scroll-direction="horizontal" data-scroll-speed="2">
                <img src="/assets/images/gibson.png" alt="Imagen generada por media de una inteligencia artificia">
                <p class="text-sm color-blue-7 pt-3">Imagen generada por media de una inteligencia artificial,
                    interpretando
                    la frase "The sky above the port was the color<br>
                    of television" de William Gibson.</p>
            </div>

        </div>
        <div class="d-flex justify-content-end " data-scroll data-scroll-direction="horizontal" data-scroll-speed="8">
            <img src="/assets/images/arrow.png" alt="Flecha de continuación">
        </div>

    </div>









    <div class="aaa bg-blue-1" data-scroll-section>
        <p data-scroll data-scroll-speed="1" class="title-4 p-5 color-white">Exploración del marco teórico</p>

        <p data-scroll data-scroll-direction="horizontal" data-scroll-speed="5" style="margin-left: 20vw;"
            class="text-base font-200 p-5 color-white">Imagen generada por media de una inteligencia artificial,
            <br>interpretando la frase "The sky above the port was the color
            of television" de William Gibson.
        </p>
        <p data-scroll data-scroll-direction="horizontal" data-scroll-speed="3" style="margin-right: 4vw;"
            class="text-base font-200 p-5 color-white">Imagen generada por media de una inteligencia artificial,
            <br>interpretando la frase "The sky above the port was the color
            of television" de William Gibson.
        </p>

    </div>

    <div class="aaa dev bg-blue-1" data-scroll-section>
        <p data-scroll class="text-4xl font-700 p-5 color-white">BBBBBB Loren ipsum</p>

        <p data-scroll data-scroll-direction="horizontal" data-scroll-speed="8" style="margin-left: 20vw;"
            class="text-base font-200 p-5 color-white">Imagen generada por media de una inteligencia artificial,
            <br>interpretando la frase "The sky above the port was the color
            of television" de William Gibson.
        </p>

    </div>



    <div class="section ddd bg-pink-1" data-scroll-section>
        <div>
            <h2 class="text-2xl font-700" data-scroll data-scroll-speed="1">Imagen generada por media</h2>
            <div class="rotate">
                <p class="text-4xl" data-scroll data-scroll-speed="3">William Gibson.</p>
            </div>

        </div>
    </div>


</div>



{% endblock %}